<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="ldb.solr">
        <description>
            JPA Properties
        </description>

        <class>ldb.solr.entity.Person</class>

        <properties>
                <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /> <!-- DB Driver -->
                <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/solr" /> <!-- BD Mane -->
                <property name="javax.persistence.jdbc.user" value="postgres" /> <!-- DB User -->
                <property name="javax.persistence.jdbc.password" value="Tdci8760" /> <!-- DB Password -->

                <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/> <!-- DB Dialect -->
                <property name="hibernate.hbm2ddl.auto" value="none" /> <!-- create / create-drop / update -->

                <property name="hibernate.show_sql" value="false" /> <!-- Show SQL in console -->
                <property name="hibernate.format_sql" value="false" /> <!-- Show SQL formatted -->
        </properties>

    </persistence-unit>

</persistence>
